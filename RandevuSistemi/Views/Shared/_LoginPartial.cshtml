@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Profile" asp-action="Index" title="Manage">Merhaba @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <a asp-controller="Account" asp-action="Logout" class="nav-link btn btn-link text-dark">Çıkış</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Kayıt</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Giriş</a>
    </li>
}
</ul>
